{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*", "src/__tests__/**/*"],
  "compilerOptions": {
    // required for dataclass
    "strictPropertyInitialization": false,

    "module": "node16",

    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "sourceMap": true,

    "listEmittedFiles": true,

    "target": "ES2022"
  }
}
